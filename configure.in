dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(eek, 0.1)
AM_CONFIG_HEADER(config.h)

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

dnl FIXME: this is a stub
if false; then
 AC_DEFINE(BYTE_ORDER_BIG, 1, [Use big byte first])
else
 AC_DEFINE(BYTE_ORDER_SMALL, 1, [Use small byte first])
fi

dnl Check for GTK
AM_PATH_GTK_2_0(2.6.0, , AC_MSG_ERROR([GTK+ version >= 2.6.0 is required]))

dnl Use -Wall if we have gcc.
changequote(,)dnl
if test "x$GCC" = "xyes"; then
  case " $CFLAGS " in
  *[\ \	]-Wall[\ \	]*) ;;
  *) CFLAGS="$CFLAGS -Wall" ;;
  esac
fi
changequote([,])dnl

AC_OUTPUT([
Makefile
src/Makefile
])
